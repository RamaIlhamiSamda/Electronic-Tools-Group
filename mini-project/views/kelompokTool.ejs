<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS only -->
    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
        rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
        crossorigin="anonymous"
    />
    <link rel = "stylesheet" href ="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel = "stylesheet" href = "/css/kelompokTool.css"/>
</head>
<body>

    <div class = "container">
    <!-- bagian atas -->
    <div class="row text-center bg-success bg-opacity-25">
        <div class="kata">
            <h3 class = "kta">PRAKTIKUM MAHASISWA TEKNIK ELEKTRO</h3>
        </div>
    </div> 

    <!-- navbar -->
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-light bg-success ">
            <div class="container-fluid">
              <a class="navbar-brand text-light" href="/student/login">Home</a>
              <i class="fa-solid fa-home me-2 text-light"></i>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>

              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                  <li class="nav-item">
                    <a class="nav-link text-light" href="/student">students</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link text-light" href="/practicalTool">additional Tool</a>
                  </li>

                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      Daftar Kelompok
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                      <li><a class="dropdown-item " href="/kelompok/information/1">Kelompok 1</a></li>
                      <li><a class="dropdown-item" href="/kelompok/information/2">Kelompok 2</a></li>
                      <li><a class="dropdown-item" href="/kelompok/information/3">kelompok 3</a></li>
                    </ul>
                  </li>

                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      Practical Tool Kelompok
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                      <li><a class="dropdown-item" href="/kelompokTool/1/practicalTool">Practical Tool Kelompok 1</a></li>
                      <li><a class="dropdown-item" href="/kelompokTool/2/practicalTool">Practical Tool Kelompok 2</a></li>
                      <li><a class="dropdown-item" href="/kelompokTool/3/practicalTool">Practical Tool Kelompok 3</a></li>
                    </ul>
                  </li>
                  

                </ul>
              </div>
            </div>
          </nav>
    </div>

        <div class="table my-3">
            <table class = "table table-bordered">
                <h3><%= kelompokPracticalTool.kelompokName%></h3>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Ukurane</th>
                        <th>Jumlah</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% kelompokPracticalTool.practicalTools.forEach(practicalTool=>{ %>
                        <tr>
                            <td><%= practicalTool.name%></td>
                            <td><%= practicalTool.ukuran%></td>
                            <td><%= practicalTool.jumlah%></td>
                            <td>
                            <a href = "/kelompokTool/tambah" class = "btn btn-sm btn-danger">tambah</a>
                        </td>
                        </tr>
                    <%}) %>
                </tbody>
            </table>
            
        </div>

    </div>

    <!-- JavaScript Bundle with Popper -->
    <script 
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
        crossorigin="anonymous">
</script>
</body>
</html>